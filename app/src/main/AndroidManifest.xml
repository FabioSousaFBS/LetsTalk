<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="letstalk.projetos.com.letstalk">

    <application
        android:allowBackup="true"
        android:icon="@drawable/letstalk_icone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/letstalk_icone"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.CadastroUserActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ConversaActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="letstalk.projetos.com.letstalk.activity.MainActivity"></meta-data>

        </activity>



    </application>

</manifest>